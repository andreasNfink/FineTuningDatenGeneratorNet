    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug FineTuning Console",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/FineTuningDataGenerator.Console/bin/Debug/net8.0/FineTuningDataGenerator.Console.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "stopAtEntry": false
        },
        {
            "name": "Debug Console - Clean InputFiles",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/FineTuningDataGenerator.Console/bin/Debug/net8.0/FineTuningDataGenerator.Console.dll",
            "args": ["InputFiles", "OutputFiles"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "stopAtEntry": false
        },
        {
            "name": "Debug Console - Single File",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build", 
            "program": "${workspaceFolder}/src/FineTuningDataGenerator.Console/bin/Debug/net8.0/FineTuningDataGenerator.Console.dll",
            "args": ["InputFiles/auftrage.md"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "stopAtEntry": false
        }
